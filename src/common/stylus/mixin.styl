one-px($color)
   position relative
   &:after
     position: absolute
     display block
     position absolute
     left 0
     bottom 0
     content ""
     width 100%
     height 1px
     background: $color
     @media screen and (-webkit-device-pixel-ratio:2) 
       transform: scaleY(.5)
     @media screen and (-webkit-device-pixel-ratio:3) 
       transform: scaleY(.33333)